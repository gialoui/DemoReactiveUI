<Window x:Class="DemoAppReactiveUI.View.SearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAppReactiveUI.Control"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="380"
        Width="1180"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <SolidColorBrush Opacity="0.5" Color="Black" />
    </Window.Background>
    <Grid>
        <local:SearchControl x:Name="SearchControl" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" />
    </Grid>
</Window>